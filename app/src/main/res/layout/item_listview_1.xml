<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_yijian_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/item_title"
            android:text="xxxxx"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="224dp"
            android:layout_toRightOf="@id/tv_yijian_title"
            android:text="状态："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_yj_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_status"
            android:text="未处理"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/item_huifu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/tv_yj_status"
            android:text="回复内容："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_huifu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/item_huifu_txt"
            android:text="未处理"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_tj_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:text="提交时间："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_tj_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_yijian_title"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/item_tj_time"
            android:text="2018-12-12"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_huifu_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_huifu_txt"
            android:layout_marginLeft="416dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/tv_tj_time"
            android:text="回复时间："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_huifu_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_yijian_title"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/item_huifu_time"
            android:text="2017-12-11"
            android:textSize="20sp" />

    </RelativeLayout>
</LinearLayout>
